---
import Badge from "./Badge.astro";

interface Props {
	date: string;
  position: string;
  name: string;
  description: string;
  tecnologies: string[];
}

const { date, position, name, description, tecnologies } = Astro.props;
---

<li class="mb-12">
  <div class="group relative grid pb-1 transition-all sm:grid-cols-8 sm:gap-8 md:gap-4 lg:hover:!opacity-100 lg:group-hover/list:opacity-50">
    <div class="absolute -inset-x-1 -inset-y-4 z-0 hidden rounded-md transition motion-reduce:transition-none lg:-inset-x-6 lg:block lg:bg-slate-800/50 lg:shadow-[inset_0_1px_0_0_rgba(148,163,184,0.1)] lg:drop-shadow-lg"></div>
    <header class="z-10 mb-2 mt-1 text-xs font-semibold uppercase tracking-wide text-slate-500 sm:col-span-2" aria-label={date}>{date}</header>
    <div class="z-10 sm:col-span-6">
      <h3 class="font-medium leading-snug text-slate-200">
        <div>
          <span class="inline-flex items-baseline font-medium leading-tight text-slate-200 hover:text-yellow-200 focus-visible:text-yellow-200  group/link text-base" aria-label={position}>
            <span class="absolute -inset-x-1 -inset-y-2.5 hidden rounded md:-inset-x-6 md:-inset-y-4 lg:block"></span>
            <span>{position} Â·
              <span class="inline-block">{name}</span>
            </span>
          </span>
        </div>
      </h3>
      <p class="mt-2 text-sm leading-normal">{description}</p>
      <ul class="mt-2 flex flex-wrap" aria-label="Technologies used">
        {
          tecnologies.map(name => (
            <Badge name={name}/>
          ))
        }
      </ul>
    </div>
  </div>
</li>